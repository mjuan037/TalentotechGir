const skillCategoryColors = {
    'Cognitive skills': palette.green,
    'Self-efficacy': palette.dark,
    'Working with others': '#6a994e',
    'Management skills': palette.blue,
    'Technology skills': '#bc4749',
    'Engagement skills': palette.yellow,
    'Ethics': '#a5a58d'
};

const populateSkillsList = (elementId, data) => {
    const list = document.getElementById(elementId);
    data.forEach((skill, index) => {
        const color = skillCategoryColors[skill.category] || palette.gray;
        const li = document.createElement('li');
        li.className = 'flex items-center bg-gray-50 p-3 rounded-lg shadow-sm';
        li.innerHTML = `
            <span class="flex-shrink-0 h-6 w-6 rounded-full mr-4" style="background-color: ${color}"></span>
            <span class="font-bold text-gray-700 flex-grow">${index + 1}. ${skill.name}</span>
            <span class="text-xs font-semibold text-white px-2 py-1 rounded-full" style="background-color: ${color}">${skill.category}</span>
        `;
        list.appendChild(li);
    });
};
populateSkillsList('coreSkillsList', coreSkillsData);
populateSkillsList('fastestGrowingSkillsList', fastestSkillsData);

